<center  width="100%" style="table-layout: fixed; background-color: #e2e6e5; padding-bottom: 60px;">
	<table style="border-spacing: 0; max-width: 600px; background-color: #fff; font-family: sans-serif; color: #4a4a4a; box-shadow: 0 0 25px rgba(0, 0, 0, .15); text-align: center !important;"  width="100%">
		<!-- banner -->
		<tr>
			<td height="8" style="background-color: #000; padding: 0;">
			</td>
		</tr>
		<!-- logo -->
		<tr>
			<td style="padding: 14px 0 4px; text-align: center;">
				<table style="border-spacing: 0; margin: 0 auto; width: auto; max-width: 300px;">
					<tr>
						<td style="padding: 0 35px 5px;">
							<a href="#"><img style="border: 0; width: 180px; display: block; margin: 0 auto;" src="https://e7.pngegg.com/pngimages/680/534/png-clipart-logo-design-emblem-logo.png" alt="logo" title="QuickStay logo"></a>
						</td>
					</tr>
				</table>
			</td>
		</tr>
		<!-- border -->
		<tr>
			<td height="2px" style="background-color: #000; padding: 0;"></td>
		</tr>
		<!-- text, code and text -->
		<tr>
			<td style="padding: 5px;">
				<table style="border-spacing: 0;" width="100%">
					<tr>
						<td style="padding: 0;">
							<div style="line-height: 23px; font-size: 15px; text-align: left;">
								<%#= simple_format(@content) %>
								<%= @content.body.to_s.html_safe %>
							</div>
						</td>
					</tr>
				</table>
			</td>
		</tr>
		<!-- notice -->
		<tr>
			<td  style="padding: 5px"  >
				<table style="border-spacing: 0;" style="width: 100%">
					<tr style="background-color: #cdcdcd">
						<td style="padding-top: 21px; text-align: left; padding-bottom: 21px; padding-left: calc(15px + (39 - 15) * ((100vw - 320px) / (1920 - 320)))">
							<p><span style="color: #000; font-size: large;">NOTE: </span>This email is intended for (<strong><%= @to %></strong>). If you have received this email in error or you are not the intended recipient, please disregard and delete it. Any unauthorized review, use, disclosure, or distribution is prohibited. Thank you.</p>
						</td>
					</tr>
				</table>
			</td>
		</tr>
		<tr>
			<td height="2px" style="background-color: #000;"></td>
		</tr>
		<!-- footer section -->
		<tr>
			<td style="background-color: #2b2e33; color:#fff; padding: 0;">
				<table style="border-spacing: 0;" width="100%">
					<tr>
						<td style="padding: 45px 20px;">
							<p>123 Main Street, Anytown XYZ 12345</p>
							<a href="javascript:void(0)"  style="margin-right: 10px;"><img width="25px" style="border: 0;" src="http://themes.pixelstrap.com/multikart/email-template/images/fb.png" alt="social"></a>
							<a href="javascript:void(0)"  style="margin-right: 10px;"><img width="25px" style="border: 0;" src="http://themes.pixelstrap.com/multikart/email-template/images/insta.png" alt="social"></a>
							<a href="javascript:void(0)"  style="margin-right: 10px;"><img width="25px" style="border: 0;" src="http://themes.pixelstrap.com/multikart/email-template/images/twitter-w.png" alt="social"></a>
							<a href="javascript:void(0)"><img width="25px" style="border: 0;" src="http://themes.pixelstrap.com/multikart/email-template/images/pinterest-w.png" alt="social"></a>
						</td>
					</tr>
				</table>
			</td>
		</tr>
		<tr>
			<td height="10px" style="background-color: #000;"></td>
		</tr>
	</table>
</center>