<h1>Edit Stock for <%= @book.title %></h1>
<%= form_with model: [:admin, @book], url: admin_stock_path(@book), method: :put do |form| %>
	<div class="field">
		<%= form.label :stock %>
		<%= form.number_field :stock, value: @book.stock %>
	</div>
	<div class="actions">
		<%= form.submit 'Update Stock' %>
	</div>
<% end %>
<%= link_to 'Back', admin_stock_index_path %>
