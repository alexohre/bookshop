<div class="container-xxl flex-grow-1 container-p-y">
	<div class="row">
		<div class="col-lg-6 mb-4 mx-auto">
			<%#  %>
			<div class="card">
				<div class="d-flex align-items-end row">
					<div class="col">
						<div class="card-body">
							<h4>Update Stock for: <span class="text-dark"><%= @book.title %></span></h4>
							<h4>Book Type: <%= @book.book_type %></h4>
							<h3>Available Stock: <span class="text-danger"><%= @book.stock %></span></h3>
							<%= form_with model: [:admin, @book], url: admin_stock_path(@book), method: :put do |form| %>
								<div class="mb-3">
									<%= form.label :stock %>
									<%= form.number_field :restock_quantity, min: 1, class: "form-control", placeholder: "Enter quantity" %>
								</div>
								<div class="actions">
									<%= form.submit 'Update Stock', class: "btn btn-primary" %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
			<%= link_to 'Back', admin_stock_index_path, class: "btn btn-secondary mt-3" %>
		</div>
	</div>
