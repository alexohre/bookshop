<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Settings /</span> Contact Details</h4>
	<div class="row">
		<div class="col-md-6">
			<div class="card mb-4">
				<h5 class="card-header">Form</h5>
				<!-- Account -->
				<hr class="my-0">
				<div class="card-body">
					<% if @site.errors.any? %>
						<div id="error_explanation">
							<h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>
							<ul>
								<% @site.errors.full_messages.each do |msg| %>
									<li><%= msg %></li>
								<% end %>
							</ul>
						</div>
					<% end %>
					<%= form_with(model: [:admin, @site], url: @site.persisted? ? admin_site_path(@site) : admin_site_path, method: @site.persisted? ? :patch : :post, data: {turbo: false}) do |form| %>
						<%#= form.hidden_field :id %>
						<div class="row">
							<div class="mb-3 col-md-12">
								<label for="email" class="form-label">Support E-mail</label>
								<%= form.email_field :contact_email, class: "form-control", placeholder: "john.doe@example.com" %>
							</div>
							<div class="mb-3 col-md-12">
								<label class="form-label" for="phoneNumber">Support Phone Number</label>
								<div class="input-group input-group-merge">
									<%= form.text_field :contact_number, class: "form-control", placeholder: "(+xx) 202 555 0111" %>
								</div>
							</div>
							<div class="mb-3 col-md-12">
								<label for="address" class="form-label">Address</label>
								<%= form.text_area :contact_address, class: "form-control", rows: 4, placeholder: "123 Main str" %>
							</div>
						</div>
						<div class="mt-2">
							<%= form.submit 'Save changes', class: "btn btn-primary me-2" %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
