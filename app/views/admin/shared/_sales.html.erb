<aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
	<div class="app-brand demo">
		<a href="<%= admin_bookshop_path %>" class="app-brand-link" data-turbo="false">
			<%= image_tag("img/d_logo.png", width: "40") %>
			<span class="app-brand-text demo menu-text fw-bolder ms-2 text-capitalize">Bookshop</span>
		</a>
		<a href="javascript:void(0);" class="layout-menu-toggle menu-link text-large ms-auto d-block d-xl-none">
			<i class="bx bx-chevron-left bx-sm align-middle"></i>
		</a>
	</div>
	<div class="menu-inner-shadow"></div>
	<ul class="menu-inner py-1">
		<!-- Dashboard -->
		<% if defined?(@student) && @student.present? %>
			<li class="menu-item <%= 'active' if request.path == admin_bookshop_path || request.path == admin_path(@student.mat_no)%>">
			<% else %>
				<li class="menu-item <%= 'active' if request.path == admin_bookshop_path %>">
				<% end %>
				<a href="<%= admin_bookshop_path %>" class="menu-link" data-turbo="false">
					<i class="menu-icon tf-icons bx bx-cart-alt"></i>
					<div data-i18n="Analytics">Sales</div>
				</a>
			</li>
			<li class="menu-header small">
				<span class="menu-header-text">Pages</span>
			</li>
			<li class="menu-item <%= 'active' if request.path == admin_sales_history_path %>">
				<a href="<%= admin_sales_history_path %>" class="menu-link" data-turbo="false">
					<i class="menu-icon tf-icons bx bx-history"></i>
					<div data-i18n="Analytics">Order History</div>
				</a>
			</li>
			<!-- User interface -->
			<li class="menu-item <%= 'active open' if request.path == admin_settings_account_path || request.path == admin_settings_site_details_path || request.path == admin_settings_password_path %>">
				<a href="javascript:void(0)" class="menu-link menu-toggle">
					<i class="menu-icon tf-icons bx bx-cog"></i>
					<div data-i18n="User interface">Settings</div>
				</a>
				<ul class="menu-sub">
					<li class="menu-item <%= 'active' if request.path == admin_settings_account_path %>">
						<a href="<%= admin_settings_account_path %>" class="menu-link" data-turbo="false">
							<div data-i18n="Accordion">Account</div>
						</a>
					</li>
					<li class="menu-item <%= 'active' if request.path == admin_settings_password_path %>">
						<a href="<%= admin_settings_password_path %>" class="menu-link" data-turbo="false">
							<div data-i18n="Accordion">Password</div>
						</a>
					</li>
					<li class="menu-item <%= 'active' if request.path == admin_settings_site_details_path %>">
						<a href="<%= admin_settings_site_details_path %>" class="menu-link" data-turbo="false">
							<div data-i18n="Carousel">Contact Details</div>
						</a>
					</li>
				</ul>
			</li>
		</ul>
	</aside>
