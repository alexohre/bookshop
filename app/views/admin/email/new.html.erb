<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Email /</span>New Email</h4>
	<div class="row">
		<div class="col-md-12">
			<div class="col-md mb-4 mb-md-0">
				<div class="accordion mt-3" id="accordionExample">
					<div class="row">
						<div class="col-md-6">
							<div class="card mb-4">
								<div class="card-body">
									<form action="">
										<div class="mb-3">
											<label for="defaultFormControlInput" class="form-label">Select User</label>
											<select id="defaultSelect" class="form-select">
												<option>Default select</option>
												<option value="1">One</option>
												<option value="2">Two</option>
												<option value="3">Three</option>
											</select>
										</div>
										<div class="mb-3">
											<label for="defaultFormControlInput" class="form-label">Subject</label>
											<input type="text" class="form-control" id="defaultFormControlInput" placeholder="John Doe" aria-describedby="defaultFormControlHelp">
										</div>
										<div class="mb-3">
											<textarea class="form-control" name="" id="" cols="30" rows="5"></textarea>
										</div>
										<div class="demo-inline-spacing">
											<button type="submit" class="btn btn-primary float-end" data-turbo="false">
												<span class="tf-icons bx bx-mail-send"></span>&nbsp; Send Email
											</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
