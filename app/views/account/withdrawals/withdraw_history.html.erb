<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Withdrawals /</span> Recent withdrawal</h4>
	<div class="row">
		<div class="card">
			<div class="col-md-3">
			</div>
			<div class="table-responsive text-nowrap">
				<table class="table table-striped mb-3">
					<thead>
						<tr>
							<th>Ref No</th>
							<th>Amount</th>
							<th>Payment Method</th>
							<th>Date</th>
							<th>Status</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody class="table-border-bottom-0">
						<% if @withdrawals.present? %>
							<% @withdrawals.each do |withdraw| %>
								<tr>
									<td><strong><%= withdraw.order_id %></strong></td>
									<td><%= number_to_currency(withdraw.amount, precision: 2) %></td>
									<td><%= withdraw.payment_method.name %></td>
									<td><%= withdraw.created_at.strftime("	%d-%m-%Y ") %> </td>
									<td>
										<% if withdraw.status == "Pending" %>
											<span class="badge bg-label-warning me-1"><%= withdraw.status %></span>
										<% elsif withdraw.status == "Approved" %>
											<span class="badge bg-label-success me-1"><%= withdraw.status %></span>
										<% elsif withdraw.status == "Cancelled" %>
											<span class="badge bg-label-danger me-1"><%= withdraw.status %></span>
										<% end %>
									</td>
									<td>
										<button type="button" class="btn btn-sm btn-outline-secondary disabled" >
											<span class="tf-icons bx bx-credit-card"></span>&nbsp; View deposit
										</button>
									</td>
								</tr>
							<% end %>
						<% else %>
							<tr >
								<td colspan="6" class="text-center">No withdrawals yet </td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
	<%# pagination %>
	<%= render 'account/shared/pagy', locals: {pagy: @pagy} %>
</div>
