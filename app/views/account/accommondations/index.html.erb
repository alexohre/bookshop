<div class="container-xxl flex-grow-1 container-p-y">
	<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Bed Space /</span> My Bed Space </h4>
	<div class="row">
		<div class="col-md-10 mx-auto">
			<% unless @has_active_accommondation %>
				<div class="card">
					<div class="row row-bordered g-0 text-center">
						<div class="col">
							<h5 class="card-header m-0 me-2 pb-3">No Active Accommondation</h5>
							<%# <div class="btn btn-primary mb-3">Reserve Now</div> %>
							<%= link_to "Reserve Now", new_account_accommondation_path, class: "btn btn-primary mb-3" %>
						</div>
					</div>
				</div>
			<% else %>
				<div class="card mt-4">
					<div class="row row-bordered g-0">
						<div class="col">
							<h5 class="card-header m-0 me-2 pb-3">Accommondation(s)</h5>
							<div class="table-responsive text-nowrap">
								<table class="table table-striped">
									<thead>
										<tr>
											<th>Ref No</th>
											<th>Names</th>
											<th>Amount</th>
											<th>Hostel</th>
											<th>RoomType</th>
											<th>Room No/Bed</th>
											<th>Status</th>
											<th>Session</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody class="table-border-bottom-0">
										<% @accommondations.each do |acc| %>
											<tr>
												<% name = acc.account.first_name + " " + acc.account.last_name %>
												<td><%= acc.ref_no %></td>
												<td><%= name %></td>
												<td><%= number_to_currency(acc.amount, unit: "â‚¦") %></td>
												<td>
													<%= acc.hostel %>
												</td>
												<td>
													<%= acc.room_type %>
												</td>
												<td>
													<%= acc.room_no %>
													/ <%= acc.bed%></td>
												<td><span class="badge bg-label-success me-1">Active</span></td>
												<td>
													<%= acc.session %>
												</td>
												<td>
													<%= link_to 'Print', print_account_accommondation_path(acc, format: :pdf), method: :get, class: 'btn btn-primary btn-sm', data: {turbo: false} %>
												</td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>