              <div class="card-title d-flex align-items-start justify-content-between">
                <div class="avatar flex-shrink-0">
                  <i class="menu-icon fs-2 fw-bold tf-icons bx bx-link"></i>
                </div>
              </div>
              <span>Clicks</span>
              <h3 class="card-title text-nowrap mb-1"><%= @clicks_count %></h3>
            </div>
          </div>
        </div>
      </div>
