<div class="container-xxl flex-grow-1 container-p-y">
	<div class="row">
		<div class="col-lg-10 mb-4 mx-auto">
			<%#  %>
			<div class="card">
				<div class="d-flex align-items-end row">
					<div class="col">
						<div class="card-body">
							<div class="table-responsive text-nowrap">
								<table class="table">
									<thead>
										<tr class="text-center">
											<th>Mat No</th>
											<th>Book Title</th>
											<th>Book Type</th>
											<th>Amount</th>
											<th>Date</th>
										</tr>
									</thead>
									<tbody class="table-border-bottom-0">
										<% @sales.each do |sale| %>
											<tr id="sale_<%= sale.id %>" class="text-center">
												<td><%= sale.sale.student.mat_no %></td>
												<td><%= sale.book.title %></td>
												<td><%= sale.book.book_type %></td>
												<td><%= number_to_currency(sale.amount, unit: "â‚¦") %></td>
												<td><%= sale.created_at.strftime("%d %b %Y %H:%M") %></td>
											</tr>
										<% end %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="mt-3">
				<%= render 'admin/shared/pagy', locals: {pagy: @pagy} %>			</div>
		</div>
	</div>
</div>
